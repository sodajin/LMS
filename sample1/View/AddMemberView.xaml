<UserControl x:Class="sample1.View.AddMemberView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:sample1.View"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1200">
    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="550"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Border CornerRadius="30" Opacity=".97">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10002b" Offset="0"/>
                        <GradientStop Color="#240046" Offset=".2"/>
                        <GradientStop Color="#212529" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10002b" Offset="0"/>
                        <GradientStop Color="#240046" Offset=".2"/>
                        <GradientStop Color="#212529" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="190"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--HEADLINE-->
                    <Grid Grid.Row="0" Grid.Column="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Grid.Row="0" Grid.Column="1" Margin="0,0,10,0" Text="ADD MEMBER" FontFamily="Helvetica" FontSize="36" FontWeight="Heavy" Foreground="Wheat" VerticalAlignment="Bottom"/>
                            <Icons:PackIconMaterial Kind="AccountPlus" VerticalAlignment="Center" Width="40" Height="40" Foreground="#f5bd1f" Margin="10,0,40,0"/>
                        </StackPanel>

                    </Grid>

                    <!--ID NO.-->
                    <TextBlock Grid.Row="1" Margin="40,0" Text="ID NO." VerticalAlignment="Center" FontFamily="Helvetica" FontSize="18" FontWeight="Medium" Foreground="#e9ecef"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="15,15,40,15" Background="Transparent" BorderBrush="LightGray" BorderThickness="0,0,0,1" Foreground="#e9ecef" VerticalContentAlignment="Center" FontSize="16" FontWeight="Medium" Text="{Binding ID, UpdateSourceTrigger=PropertyChanged}"/>

                    <!--FIRST NAME-->
                    <TextBlock Grid.Row="2" Margin="40,0" Text="FIRST NAME" VerticalAlignment="Center" FontFamily="Helvetica" FontSize="18" FontWeight="Medium" Foreground="#e9ecef"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Margin="15,15,40,15" Background="Transparent" BorderBrush="LightGray" BorderThickness="0,0,0,1" Foreground="#e9ecef" VerticalContentAlignment="Center" FontSize="16" FontWeight="Medium" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>

                    <!--MIDDLE NAME-->
                    <TextBlock Grid.Row="3" Margin="40,0" Text="MIDDLE NAME" TextWrapping="Wrap" VerticalAlignment="Center" FontFamily="Helvetica" FontSize="18" FontWeight="Medium" Foreground="#e9ecef"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Margin="15,15,40,15" Background="Transparent" BorderBrush="LightGray" BorderThickness="0,0,0,1" Foreground="#e9ecef" VerticalContentAlignment="Center" FontSize="16" FontWeight="Medium" Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}"/>

                    <!--LAST NAME-->
                    <TextBlock Grid.Row="4" Margin="40,0" Text="LAST NAME" VerticalAlignment="Center" FontFamily="Helvetica" FontSize="18" FontWeight="Medium" Foreground="#e9ecef"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Margin="15,15,40,15" Background="Transparent" BorderBrush="LightGray" BorderThickness="0,0,0,1" Foreground="#e9ecef" VerticalContentAlignment="Center" FontSize="16" FontWeight="Medium" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>

                    <!--USERNAME-->
                    <TextBlock Grid.Row="5" Margin="40,0" Text="USERNAME" VerticalAlignment="Center" FontFamily="Helvetica" FontSize="18" FontWeight="Medium" Foreground="#e9ecef"/>
                    <TextBox Grid.Row="5" Grid.Column="1" Margin="15,15,40,15" Background="Transparent" BorderBrush="LightGray" BorderThickness="0,0,0,1" Foreground="#e9ecef" VerticalContentAlignment="Center" FontSize="16" FontWeight="Medium" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                    <!--PASSWORD-->
                    <TextBlock Grid.Row="6" Margin="40,0" Text="PASSWORD" VerticalAlignment="Center" FontFamily="Helvetica" FontSize="18" FontWeight="Medium" Foreground="#e9ecef"/>
                    <TextBox Grid.Row="6" Grid.Column="1" Margin="15,15,40,15" Background="Transparent" BorderBrush="LightGray" BorderThickness="0,0,0,1" Foreground="#e9ecef" VerticalContentAlignment="Center" FontSize="16" FontWeight="Medium" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>

                </Grid>

            </Border>

        </Grid>

        <!--ADD & CANCEL BUTTONS-->
        <Grid Grid.Row="2" Grid.Column="1">
            <StackPanel Orientation="Horizontal" Margin="200,30,180,30">
                <Button Style="{StaticResource BasicBtn}" Content="OK" Width="100" Margin="0,0,20,0" Command="{Binding AddMemberCommand}"/>
                <Button Style="{StaticResource BasicBtn}" Content="CANCEL" Width="120" Command="{Binding CancelCommand}"/>
            </StackPanel>

        </Grid>

    </Grid>
</UserControl>
